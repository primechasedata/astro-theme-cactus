---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Constants
const MAX_POSTS = 10;
const MAX_NOTES = 5;

// Posts
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
  .sort(collectionDateSort)
  .slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const allNotes = await getCollection("note");
const latestNotes = allNotes
  .sort(collectionDateSort)
  .slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "Home" }}>
  {/* Section: What We Do */}
  <section>
    <h1 class="title mb-6">What We Do</h1>
    <ul class="mb-4">
      <li>Search Engine Optimization</li>
      <li>Small Business Technology</li>
      <li>PPC - Google</li>
      <li>Business Intelligence (Power BI)</li>
      <li>Project Management and Workshops</li>
      <li>Content Marketing</li>
      <li>Social Media Marketing</li>
      <li>Seller Representation</li>
      <li>ASC Management</li>
      <li>Content Production</li>
    </ul>
  </section>

  {/* Section: Blog Post List */}
  <section aria-label="Blog post list" class="mt-16">
    <h2 class="title mb-6 text-xl text-accent">
      <a href="/posts/">Posts</a>
    </h2>
    <ul class="space-y-4" role="list">
      {allPostsByDate.map((post) => (
        <li key={post.id} class="grid gap-2 sm:grid-cols-[auto_1fr]">
          <PostPreview post={post} />
        </li>
      ))}
    </ul>
  </section>

  {/* Section: Notes */}
  {latestNotes.length > 0 && (
    <section class="mt-16">
      <h2 class="title mb-6 text-xl text-accent">
        <a href="/notes/">Notes</a>
      </h2>
      <ul class="space-y-4" role="list">
        {latestNotes.map((note) => (
          <li key={note.id}>
            <Note note={note} as="h3" isPreview />
          </li>
        ))}
      </ul>
    </section>
  )}
</PageLayout>